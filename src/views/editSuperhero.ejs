<%- include('partials/head') %>

<body>

    <%- include('partials/menu') %>

    <%- include('partials/header') %>

    <!--FORMULARIO-->
<form action="/api/heroes/editar/<%= superheroe._id %>?_method=PUT" method="POST">
    
    <input type="hidden" name="_method" value="PUT">
    
    <%- include('partials/editNav') %>
    
<main class="flex-1 flex flex-wrap justify-center m-4 gap-1">
    
    
        <div class="w-[25em] bg-slate-700 border-2 border-slate-600">

            <header class="grid grid-cols-1 px-3 pt-1 rounded-br-full bg-stone-900 select-none">
                <input
                    value="<%= superheroe.nombreSuperHeroe %>"
                    class="col-span-6 font-black select-text"
                    type="text"
                    required
                    placeholder="Nombre del nuevo Héroe"
                    name="nombreSuperHeroe">

            </header>

            <main class="text-sm grid grid-cols-5 p-1">
                <span class="select-none text-right pr-2 text-slate-950">Nombre:</span>
                <input
                    value="<%= superheroe.nombreReal %>"
                    class="col-span-4"
                    type="text"
                    required
                    placeholder="Nombre Real (Ej: Clark Kent)"
                    name="nombreReal">

            </main>

            <main class="text-sm grid grid-cols-5 p-1 bg-slate-600">
                <span class="select-none text-right pr-2 text-slate-950">Edad:</span>
                <input
                    value="<%= superheroe.edad %>"
                    type="number"
                    min="0"
                    placeholder="Nº años"
                    name="edad">

                <span class="select-none text-right pr-2 text-slate-950">Orígen:</span>
                <input
                    value="<%= superheroe.planetaOrigen %>"
                    class="col-span-2"
                    type="text"
                    placeholder="Planeta (Ej: Kriptón)"
                    name="planetaOrigen">

            </main>

            <main class="text-sm grid p-1 bg-slate-700 grid grid-cols-5">
                <span class="select-none text-right pr-2 col-span-1 text-slate-950">Debilidad:</span>
                <input
                    value="<%= superheroe.debilidad %>"
                    class="col-span-4"
                    type="text"
                    placeholder="Vulnerabilidad o limitación (Ej. Kriptonita)"
                    name="debilidad">
            </main>

            
                <main class="grid grid-cols-5 text-sm p-1 bg-slate-600">
                    <span class="select-none text-right pr-2 col-span-1 text-slate-950">Poderes:</span>
                    <input class="col-span-4"
                        value="<%= superheroe.poderes %>"
                        type="text"
                        placeholder="Separados con comas. (Ej: Volar, Rayos X)"
                        name="poderes">
                </main>

            
                <main class="grid grid-cols-5 text-sm p-1 bg-slate-700">
                    <span class="select-none text-right pr-2 col-span-1 text-slate-950">Aliados:</span>
                    <input class="col-span-4"
                        value="<%= superheroe.aliados %>"
                        type="text"    
                        placeholder="Separados con comas. (Ej: Ironman, Flash)"
                        name="aliados">
                </main>
            
            
                <main class="grid grid-cols-5 text-sm p-1 bg-slate-600">
                    <span class="select-none text-right pr-2 col-span-1 text-slate-950">Enemigos:</span>
                    <input
                        value="<%= superheroe.enemigos %>"
                        class="col-span-4"
                        type="text"
                        placeholder="Separados con comas. (Ej: Mongul, Gog)"
                        name="enemigos">
                </main>
            

            <main class="text-sm grid grid-cols-5 p-1 bg-slate-700">
                <span class="select-none text-right pr-2 text-slate-950">Creador:</span>
                <input
                    value="<%= superheroe.creador %>"
                    class="col-span-4"
                    type="text"
                    placeholder="Nombre/apodo del gestor de la colección"
                    name="creador">
            </main>

        </div>
    
</main>

</form>

    <h5 class="text-center text-sm font-light text-gray-300 my-4"><%= site.editNav[0].description %></h5>

    <%- include('partials/footer') %>
    